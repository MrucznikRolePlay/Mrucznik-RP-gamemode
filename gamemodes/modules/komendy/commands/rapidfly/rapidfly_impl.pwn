command_rapidfly_Impl(playerid, params[256])
{
    if(PlayerInfo[playerid][pAdmin] >= 1 || IsAScripter(playerid))
    {
        new typ;
        sscanf(params, "D(0)", typ);
    	if(GetPVarType(playerid, "FlyMode"))
        {   
            CancelFlyMode(playerid);
        }
    	else 
        {
            FlyMode(playerid, typ);
        }
    }
    return 1;
}

